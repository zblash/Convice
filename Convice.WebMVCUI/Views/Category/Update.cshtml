@model Convice.WebMVCUI.Models.UpdateCategoryViewModel

<form asp-controller="Category" asp-action="Update" method="post">
    <input type="hidden" asp-for="Category.Id"/>
    <div class="form-group">
        <label asp-for="Category.Name">İçerik Linki</label>
        <input type="text" class="form-control" asp-for="Category.Name"/>
        <span asp-validation-for="Category.Name" class="form-text text-muted"></span>
    </div>
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>